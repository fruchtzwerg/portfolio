---
import type { App } from '../../models/app.model';
import Link from '../buttons/Link.astro';
import Hover from '../Hover.astro';

interface Props extends App {
  class?: string;
}

const { class: className, title, first, technologies, href } = Astro.props as Props;
---

<Hover
  tag="a"
  href={href}
  target="_blank"
  hoverClasses="!-inset-4"
  class:list={[className, 'no-underline hover:text-inherit']}
>
  <h4
    class="transition-all my-0 group-hover:text-2xl group-hover:text-base-content dark:group-hover:text-white"
  >
    {title}
  </h4>

  <p>{first}</p>

  <ul class="reset-list flex gap-2">
    {technologies.map(tech => <li class="keyword">{tech}</li>)}
  </ul>

  <Link groupHover class="mt-3">{href.split('https://')}</Link>
</Hover>
