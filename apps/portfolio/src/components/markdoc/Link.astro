---
import IconLink from '~icons/carbon/link';

interface Props {
  href: string;
  text: string;
  target?: string;
  groupHover?: boolean;
}

const { href, text, target, groupHover } = Astro.props;
---

<span
  class:list={[
    groupHover && 'group-hover:text-primary dark:group-hover:text-accent',
    'flex gap-2 items-center w-fit text-base-content/80 font-mono no-underline',
  ]}
>
  <IconLink />
  {text}
</span>
