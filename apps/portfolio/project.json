{
  "name": "portfolio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/portfolio/src",
  "prefix": "portfolio",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/portfolio",
        "index": "apps/portfolio/src/index.html",
        "main": "apps/portfolio/src/main.ts",
        "polyfills": "apps/portfolio/src/polyfills.ts",
        "tsConfig": "apps/portfolio/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/portfolio/src/favicon.png",
          "apps/portfolio/src/assets"
        ],
        "styles": [
          "apps/portfolio/src/styles.scss",
          {
            "bundleName": "tokyo-night-dark",
            "input": "apps/portfolio/src/themes/tokyo-night-dark.scss",
            "inject": false
          },
          "node_modules/primeng/resources/primeng.min.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/portfolio/src/environments/environment.ts",
              "with": "apps/portfolio/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all",
          "optimization": {
            "fonts": true,
            "scripts": true,
            "styles": {
              "inlineCritical": false,
              "minify": true
            }
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "portfolio:build:production"
        },
        "development": {
          "browserTarget": "portfolio:build:development"
        },
        "mobile": {
          "browserTarget": "portfolio:build:development",
          "host": "0.0.0.0",
          "disableHostCheck": true
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "portfolio:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/portfolio/src/**/*.ts",
          "apps/portfolio/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/portfolio"],
      "options": {
        "jestConfig": "apps/portfolio/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["app"]
}
