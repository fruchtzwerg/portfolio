---
import IconLink from '~icons/carbon/link';

interface Props {
  class?: string;
  groupHover?: boolean;
  href?: string;
}

const { href, class: className, groupHover } = Astro.props as Props;

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  target={href ? '_blank' : null}
  rel={href ? 'noreferrer' : null}
  class:list={[
    className,
    groupHover && 'group-hover:text-primary dark:group-hover:text-accent',
    'flex gap-2 items-center w-fit text-base-content/80 font-[Inconsolata] no-underline',
  ]}
>
  <IconLink />
  <slot />
</Tag>
