---
import LogoTailwind from '~icons/logos/tailwindcss-icon';
import LogoAstro from '~icons/portfolio/astro';

interface Props {
  class: string;
}

const { class: className } = Astro.props as Props;
---

<footer
  class:list={[
    className,
    'flex flex-col gap-4 items-center p-8 border-t border-slate-300 dark:border-secondary/20',
  ]}
>
  <p class="flex justify-center items-center font-[Inconsolata]">
    Built with <LogoAstro class="mt-1 w-5" /> and <LogoTailwind class="w-6" />
  </p>

  <!-- Contact -->
  <section class="text-sm font-extralight text-center font-default">
    <div class="text-xs mb-1">Benjamin Montazer | Kirchstraße 27 | 86637 Wertingen</div>
    <a href="tel:+4914156177881" class="link link-hover">+49 (0) 151 56177881</a> |
    <a href="mailto:benjamin@montazer.dev" class="link link-hover">benjamin@montazer.dev</a>
  </section>

  <div class="divider max-lg:my-0 text-base-content/30 font-['Inconsolata'] text-2xl">§</div>

  <!-- Legal -->
  <section class="legal">
    This website contains links to external websites. We cannot accept liability for contents of
    these third-party websites, as they are beyond our control.<br />Responsibility for the contents
    of the linked pages is always held by the provider or operator of those pages.
  </section>
  <section class="legal">© 2022 Benjamin Montazer. All rights reserved.</section>
</footer>

<style lang="scss">
  .legal {
    @apply text-xs text-base-content/50 font-['Inconsolata'] text-justify sm:text-center;
  }
</style>
